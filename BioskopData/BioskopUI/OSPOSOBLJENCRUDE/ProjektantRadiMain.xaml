<Window x:Class="BioskopUI.ProjektantRadiMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BioskopUI"
        mc:Ignorable="d"
        Title="ProjektantRadiMain" Height="450" Width="800">
    <Grid>
        <Button Content="Dodaj" HorizontalAlignment="Left" Height="44" Margin="62,75,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click" />
        <Button Content="Obrisi" HorizontalAlignment="Left" Height="44" Margin="626,75,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click_1" />
        <DataGrid x:Name="OsposobljeGrid" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{x:Static local:Data.osposobljeni}" ColumnWidth="*"  HorizontalAlignment="Left" Height="201" Margin="62,161,0,0" VerticalAlignment="Top" Width="656">
           <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Projektor.Id}" Header="Projektor ID" />
            <DataGridTextColumn Binding="{Binding Projektant.JMBG}" Header="Projektant JMBG" />
           </DataGrid.Columns>
        </DataGrid>
        <Button Content="Close" HorizontalAlignment="Left" Margin="62,367,0,0" VerticalAlignment="Top" Width="75" Height="42" />
    </Grid>
</Window>
