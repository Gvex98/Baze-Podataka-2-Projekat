        <TextBox HorizontalAlignment="Left" x:Name="JMBGProdavca" FontSize="20" BorderBrush="Black" Height="37" Margin="372,278,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="186"/>
